{
  "name": "envelopes-clean",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "gen:assets": "node scripts/generate-assets.mjs",
    "gen:assets:clean": "rimraf public/icons && mkdir -p public/icons",
    "audit:contrast": "node scripts/contrast-audit.mjs",
    "lint:owl": "node scripts/check-accent-usage.mjs",
    "typecheck": "tsc -b",
    "test": "jest --passWithNoTests",
    "audit:lighthouse": "npm run build && lhci autorun",
    "perf:bundle": "node scripts/bundle-report.mjs",
    "perf:compare": "node scripts/compare-lhci.mjs",
    "coverage:ratchet": "node scripts/coverage-ratchet.mjs",
    "prepare": "husky"
  },
  "dependencies": {
    "@radix-ui/react-accordion": "^1.2.0",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "1.1.10",
    "@radix-ui/react-checkbox": "1.3.2",
    "@radix-ui/react-collapsible": "^1.1.0",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "1.1.15",
    "@radix-ui/react-navigation-menu": "1.2.13",
    "@radix-ui/react-popover": "1.1.14",
    "@radix-ui/react-radio-group": "1.3.7",
    "@radix-ui/react-scroll-area": "1.2.9",
    "@radix-ui/react-select": "2.2.5",
    "@radix-ui/react-separator": "1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "1.1.12",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-tooltip": "1.2.7",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-router-dom": "7.8.0",
    "sonner": "2.0.7",
    "tailwind-merge": "3.3.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/js": "^9.32.0",
    "@lhci/cli": "0.15.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "14.6.1",
    "@types/jest": "^29.5.12",
    "@types/jest-axe": "3.5.9",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/testing-library__jest-dom": "5.14.9",
    "@vitejs/plugin-react": "^4.7.0",
    "babel-jest": "^28.0.2",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "husky": "^9.1.6",
    "jest": "^28.1.3",
    "jest-axe": "^9.0.0",
    "jest-environment-jsdom": "^28.1.3",
    "jsdom": "^22.1.0",
    "lighthouse": "^12.0.0",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.5",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^28.0.8",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.39.0",
    "vite": "^7.1.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,md,json}": [
      "prettier --check",
      "eslint --max-warnings=0"
    ],
    "src/**/*.{ts,tsx}": [
      "npm run lint:owl",
      "npm run audit:contrast"
    ]
  }
}
